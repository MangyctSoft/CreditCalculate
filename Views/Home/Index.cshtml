@model CreditApplication.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Credit Application";
    var credit = new CreditApplication.Core.Domain.Credit(); 
}

    <form asp-controller="Home" asp-action="Сalculate" method="post">

        <p><label class="">Сумма кредита:</label></p>
        <p><input type="text" class="" asp-for="@credit.Sum" value="50000" /></p>

        <p><label class="">Срок кредит:</label></p>
        <p>
            <input type="text" class="" asp-for="@credit.Term"/>
            <select class="" asp-for="@credit.TermCredit" asp-items="@Model.TermTypes" ></select>
        </p>

        <p><label class="">Ставка в %:</label></p>
        <p>
            <input type="text" class="" asp-for="@credit.Stacks" value="22" />
            <select id="changeStacks" class="" asp-for="@credit.StacksCredit" asp-items="@Model.StacksTypes"></select>
        </p>
      
            <p id="stepPayment" class="visually--hidden">
                    <label class="">Шаг платежа в днях:</label>
                    <select class="" asp-for="@credit.StepPayment" asp-items="@Model.StepPaymentTypes"></select>
        </p>
        


        <p><input id="calculate" type="submit" value="Рассчитать" class="btn btn-light" /></p>
    </form>


